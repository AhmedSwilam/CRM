<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/txt_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Number." />

            <TextView
                android:id="@+id/txt_complaint_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_toEndOf="@+id/txt_device" />

            <TextView
                android:id="@+id/txt_device_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_toEndOf="@+id/txt_complaint_number" />

            <TextView
                android:id="@+id/txt_technician"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_device"
                android:text="Technician Name"
                android:textSize="@dimen/_14ssp"/>

            <TextView
                android:id="@+id/txt_technician_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_device"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@+id/txt_technician" />
        </RelativeLayout>

    </ScrollView>

</LinearLayout>